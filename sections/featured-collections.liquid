<div class="featured-collections">
  <div class="container">
    <h2 class="section-title">{{ section.settings.title }}</h2>

    {% if section.blocks.size > 0 %}
      <div class="collections-grid">
        {% for block in section.blocks %}
          {% assign collection = collections[block.settings.collection] %}
          {% if collection %}
            <a href="{{ collection.url }}" class="collection-card">
              <div class="collection-card__image">
                {% if collection.image %}
                  <img src="{{ collection.image | image_url: width: 500 }}" alt="{{ collection.title }}">
                {% elsif collection.products.first %}
                  <img
                    src="{{ collection.products.first.featured_image | image_url: width: 500 }}"
                    alt="{{ collection.title }}"
                  >
                {% else %}
                  {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
              </div>
              <div class="collection-card__content">
                <h3 class="collection-card__title">{{ collection.title }}</h3>
                <p class="collection-card__count">{{ collection.products_count }} products</p>
              </div>
            </a>
          {% else %}
            <!-- Placeholder when no collection is selected -->
            <div class="collection-card collection-card--placeholder">
              <div class="collection-card__image">
                {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
              <div class="collection-card__content">
                <h3 class="collection-card__title">Select a Collection</h3>
                <p class="collection-card__count">Click to configure in theme editor</p>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    {% else %}
      <div class="featured-collections__empty">
        <p>No collections added yet. Go to the theme customizer and add collection blocks to this section.</p>
      </div>
    {% endif %}
  </div>
</div>

{% stylesheet %}
  .featured-collections {
    padding: 4rem 0;
    background: #f8f9fa;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    text-align: center;
    margin: 0 0 3rem 0;
  }

  .collections-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }

  .collection-card {
    position: relative;
    text-decoration: none;
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .collection-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
  }

  .collection-card--placeholder {
    opacity: 0.6;
    cursor: default;
  }

  .collection-card--placeholder:hover {
    transform: none;
  }

  .collection-card__image {
    aspect-ratio: 1;
    overflow: hidden;
    background: #e0e0e0;
  }

  .collection-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .collection-card:hover .collection-card__image img {
    transform: scale(1.1);
  }

  .collection-card__content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 2rem;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
    color: white;
  }

  .collection-card__title {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
  }

  .collection-card__count {
    margin: 0;
    opacity: 0.9;
  }

  .featured-collections__empty {
    text-align: center;
    padding: 3rem;
    background: white;
    border-radius: 1rem;
    color: #666;
  }

  @media (max-width: 768px) {
    .section-title {
      font-size: 2rem;
    }

    .collections-grid {
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1rem;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Featured Collections",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Shop by Category"
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Collections",
      "blocks": [
        {
          "type": "collection"
        },
        {
          "type": "collection"
        },
        {
          "type": "collection"
        },
        {
          "type": "collection"
        }
      ]
    }
  ]
}
{% endschema %}
