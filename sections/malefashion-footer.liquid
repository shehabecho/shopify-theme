<footer class="footer">
  <div class="container">
    <div class="row">
      <div class="col-lg-3 col-md-6 col-sm-6">
        <div class="footer__about">
          <div class="footer__logo">
            {% if section.settings.footer_logo %}
              <a href="/">
                <img src="{{ section.settings.footer_logo | img_url: '200x' }}" alt="{{ shop.name }}">
              </a>
            {% else %}
              <a href="/">
                <h3>{{ shop.name }}</h3>
              </a>
            {% endif %}
          </div>
          <p>{{ section.settings.footer_description }}</p>
          {% if section.settings.payment_image %}
            <a href="#"><img src="{{ section.settings.payment_image | img_url: 'master' }}" alt="Payment Methods"></a>
          {% endif %}
        </div>
      </div>
      <div class="col-lg-2 offset-lg-1 col-md-3 col-sm-6">
        <div class="footer__widget">
          <h6>{{ section.settings.menu_1_title }}</h6>
          <ul>
            {% for link in linklists[section.settings.menu_1].links %}
              <li>
                <a href="{{ link.url }}">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>
      <div class="col-lg-2 col-md-3 col-sm-6">
        <div class="footer__widget">
          <h6>{{ section.settings.menu_2_title }}</h6>
          <ul>
            {% for link in linklists[section.settings.menu_2].links %}
              <li>
                <a href="{{ link.url }}">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>
      <div class="col-lg-3 offset-lg-1 col-md-6 col-sm-6">
        <div class="footer__widget">
          <h6>Newsletter</h6>
          <div class="footer__newslatter">
            <p>{{ section.settings.newsletter_text }}</p>
            <form action="/contact#newsletter" method="post" id="newsletter-form" accept-charset="UTF-8">
              <input type="hidden" name="contact[tags]" value="newsletter">
              <input type="email" name="contact[email]" placeholder="Your email" required>
              <button type="submit"><span class="icon_mail_alt"></span></button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12 text-center">
        <div class="footer__copyright__text">
          <p>{{ section.settings.copyright_text }}</p>
        </div>
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Malefashion Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "footer_logo",
      "label": "Footer Logo"
    },
    {
      "type": "textarea",
      "id": "footer_description",
      "label": "Footer Description",
      "default": "The customer is at the heart of our unique business model, which includes design."
    },
    {
      "type": "image_picker",
      "id": "payment_image",
      "label": "Payment Methods Image"
    },
    {
      "type": "text",
      "id": "menu_1_title",
      "label": "Menu 1 Title",
      "default": "Shopping"
    },
    {
      "type": "link_list",
      "id": "menu_1",
      "label": "Menu 1",
      "default": "footer"
    },
    {
      "type": "text",
      "id": "menu_2_title",
      "label": "Menu 2 Title",
      "default": "Customer Service"
    },
    {
      "type": "link_list",
      "id": "menu_2",
      "label": "Menu 2",
      "default": "footer"
    },
    {
      "type": "textarea",
      "id": "newsletter_text",
      "label": "Newsletter Text",
      "default": "Be the first to know about new arrivals, look books, sales & promos!"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright Text",
      "default": "Copyright Â© 2024 All rights reserved"
    }
  ]
}
{% endschema %}
