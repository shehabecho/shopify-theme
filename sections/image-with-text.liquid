<div class="image-with-text {% if section.settings.layout == 'text_first' %}image-with-text--reverse{% endif %}">
  <div class="container">
    <div class="image-with-text__grid">
      <div class="image-with-text__image">
        {% if section.settings.image %}
          <img src="{{ section.settings.image | image_url: width: 800 }}" alt="{{ section.settings.title }}">
        {% else %}
          {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>

      <div class="image-with-text__content">
        <h2 class="image-with-text__title">{{ section.settings.title }}</h2>
        <div class="image-with-text__text">{{ section.settings.text }}</div>
        {% if section.settings.button_text != blank %}
          <a href="{{ section.settings.button_link }}" class="btn btn--primary">
            {{ section.settings.button_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% stylesheet %}
  .image-with-text {
    padding: 4rem 0;
  }

  .image-with-text__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .image-with-text--reverse .image-with-text__grid {
    direction: rtl;
  }

  .image-with-text--reverse .image-with-text__content {
    direction: ltr;
  }

  .image-with-text__image {
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
  }

  .image-with-text__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .image-with-text__title {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0 0 1.5rem 0;
  }

  .image-with-text__text {
    font-size: 1.125rem;
    line-height: 1.8;
    color: #666;
    margin-bottom: 2rem;
  }

  .btn--primary {
    display: inline-block;
    padding: 1rem 2.5rem;
    background: #667eea;
    color: white;
    text-decoration: none;
    border-radius: 50px;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .btn--primary:hover {
    background: #5568d3;
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .image-with-text__grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .image-with-text--reverse .image-with-text__grid {
      direction: ltr;
    }

    .image-with-text__title {
      font-size: 2rem;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Image with Text",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Our Story"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "Tell your brand story here. Share what makes your products special and why customers should choose you."
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "options": [
        {
          "value": "image_first",
          "label": "Image on left"
        },
        {
          "value": "text_first",
          "label": "Image on right"
        }
      ],
      "default": "image_first"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Image with Text"
    }
  ]
}
{% endschema %}
