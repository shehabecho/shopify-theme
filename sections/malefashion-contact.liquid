<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-option">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="breadcrumb__text">
          <h4>{{ page.title }}</h4>
          <div class="breadcrumb__links">
            <a href="/">Home</a>
            <span>{{ page.title }}</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Breadcrumb Section End -->

<!-- Contact Section Begin -->
<section class="contact spad">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-md-6">
        <div class="contact__text">
          <div class="section-title">
            <span>Information</span>
            <h2>Contact Us</h2>
            <p>{{ section.settings.contact_description }}</p>
          </div>
          <ul>
            {% if section.settings.address != blank %}
              <li>
                <h4>{{ section.settings.address_title }}</h4>
                <p>{{ section.settings.address }}</p>
              </li>
            {% endif %}
            {% if section.settings.phone != blank %}
              <li>
                <h4>{{ section.settings.phone_title }}</h4>
                <p>{{ section.settings.phone }}</p>
              </li>
            {% endif %}
            {% if section.settings.email != blank %}
              <li>
                <h4>{{ section.settings.email_title }}</h4>
                <p>{{ section.settings.email }}</p>
              </li>
            {% endif %}
          </ul>
        </div>
      </div>
      <div class="col-lg-6 col-md-6">
        <div class="contact__form">
          <form action="/contact#contact_form" method="post" id="contact_form" accept-charset="UTF-8">
            <input type="hidden" name="form_type" value="contact">
            <input type="hidden" name="utf8" value="âœ“">

            {% if form.posted_successfully? %}
              <div class="alert alert-success">
                Thanks for contacting us. We'll get back to you as soon as possible.
              </div>
            {% endif %}

            {% if form.errors %}
              <div class="alert alert-danger">
                {{ form.errors | default_errors }}
              </div>
            {% endif %}

            <div class="row">
              <div class="col-lg-6">
                <input type="text" name="contact[name]" placeholder="Name" required>
              </div>
              <div class="col-lg-6">
                <input type="email" name="contact[email]" placeholder="Email" required>
              </div>
              <div class="col-lg-12">
                <textarea name="contact[body]" placeholder="Message" required></textarea>
                <button type="submit" class="site-btn">Send Message</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Contact Section End -->

<!-- Map Begin -->
{% if section.settings.show_map and section.settings.map_url != blank %}
  <div class="map">
    <iframe
      src="{{ section.settings.map_url }}"
      height="500"
      style="border:0;"
      allowfullscreen=""
      aria-hidden="false"
      tabindex="0"
    ></iframe>
  </div>
{% endif %}
<!-- Map End -->

{% schema %}
{
  "name": "Contact Page",
  "settings": [
    {
      "type": "textarea",
      "id": "contact_description",
      "label": "Contact Description",
      "default": "As you might expect of a company that began as a high-end interiors contractor, we pay strict attention."
    },
    {
      "type": "text",
      "id": "address_title",
      "label": "Address Title",
      "default": "Address"
    },
    {
      "type": "textarea",
      "id": "address",
      "label": "Address",
      "default": "60-49 Road 11378 New York"
    },
    {
      "type": "text",
      "id": "phone_title",
      "label": "Phone Title",
      "default": "Phone"
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Phone",
      "default": "+65 11.188.888"
    },
    {
      "type": "text",
      "id": "email_title",
      "label": "Email Title",
      "default": "Email"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email",
      "default": "hello@colorlib.com"
    },
    {
      "type": "checkbox",
      "id": "show_map",
      "label": "Show Map",
      "default": false
    },
    {
      "type": "text",
      "id": "map_url",
      "label": "Google Maps Embed URL",
      "info": "Get embed URL from Google Maps"
    }
  ]
}
{% endschema %}
