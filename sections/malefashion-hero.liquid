<section class="hero">
  <div class="hero__slider owl-carousel">
    {% for block in section.blocks %}
      <div
        class="hero__items set-bg"
        data-setbg="{{ block.settings.background_image | img_url: 'master' }}"
        {{ block.shopify_attributes }}
      >
        <div class="container">
          <div class="row">
            <div class="col-xl-5 col-lg-7 col-md-8">
              <div class="hero__text">
                {% if block.settings.subtitle %}
                  <h6>{{ block.settings.subtitle }}</h6>
                {% endif %}
                {% if block.settings.title %}
                  <h2>{{ block.settings.title }}</h2>
                {% endif %}
                {% if block.settings.description %}
                  <p>{{ block.settings.description }}</p>
                {% endif %}
                {% if block.settings.button_text and block.settings.button_link %}
                  <a href="{{ block.settings.button_link }}" class="primary-btn">
                    {{ block.settings.button_text }}
                    <span class="arrow_right"></span>
                  </a>
                {% endif %}
                <div class="hero__social">
                  {% if section.settings.facebook_url %}
                    <a href="{{ section.settings.facebook_url }}"><i class="fa fa-facebook"></i></a>
                  {% endif %}
                  {% if section.settings.twitter_url %}
                    <a href="{{ section.settings.twitter_url }}"><i class="fa fa-twitter"></i></a>
                  {% endif %}
                  {% if section.settings.pinterest_url %}
                    <a href="{{ section.settings.pinterest_url }}"><i class="fa fa-pinterest"></i></a>
                  {% endif %}
                  {% if section.settings.instagram_url %}
                    <a href="{{ section.settings.instagram_url }}"><i class="fa fa-instagram"></i></a>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "twitter_url",
      "label": "Twitter URL"
    },
    {
      "type": "url",
      "id": "pinterest_url",
      "label": "Pinterest URL"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Hero Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "background_image",
          "label": "Background Image"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle",
          "default": "Summer Collection"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Fall - Winter Collections 2024"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "A specialist label creating luxury essentials. Ethically crafted with an unwavering commitment to exceptional quality."
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Shop now"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}
