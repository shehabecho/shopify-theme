<header class="header">
  <div class="header__top">
    <div class="container">
      <div class="row">
        <div class="col-lg-6 col-md-7">
          <div class="header__top__left">
            <p>{{ section.settings.announcement_text }}</p>
          </div>
        </div>
        <div class="col-lg-6 col-md-5">
          <div class="header__top__right">
            <div class="header__top__links">
              {% if customer %}
                <a href="/account">My Account</a>
                <a href="/account/logout">Logout</a>
              {% else %}
                <a href="/account/login">Sign in</a>
                <a href="/account/register">Register</a>
              {% endif %}
            </div>
            <div class="header__top__hover">
              <span>
                {{- cart.currency.iso_code }}
                <i class="arrow_carrot-down"></i
              ></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-lg-3 col-md-3">
        <div class="header__logo">
          {% if section.settings.logo %}
            <a href="/">
              <img src="{{ section.settings.logo | img_url: '200x' }}" alt="{{ shop.name }}">
            </a>
          {% else %}
            <a href="/">
              <h2>{{ shop.name }}</h2>
            </a>
          {% endif %}
        </div>
      </div>
      <div class="col-lg-6 col-md-6">
        <nav class="header__menu mobile-menu">
          <ul>
            <li class="{% if request.path == '/' %}active{% endif %}">
              <a href="/">Home</a>
            </li>
            <li class="{% if request.path contains '/collections' %}active{% endif %}">
              <a href="/collections/all">Shop</a>
            </li>
            <li>
              <a href="#">Pages</a>
              <ul class="dropdown">
                <li><a href="/pages/about">About Us</a></li>
                <li><a href="/cart">Shopping Cart</a></li>
                <li><a href="/pages/contact">Contact</a></li>
                {% if blogs.news.articles_count > 0 %}
                  <li><a href="/blogs/news">Blog</a></li>
                {% endif %}
              </ul>
            </li>
            {% if blogs.news.articles_count > 0 %}
              <li class="{% if request.path contains '/blogs' %}active{% endif %}">
                <a href="/blogs/news">Blog</a>
              </li>
            {% endif %}
            <li><a href="/pages/contact">Contact</a></li>
          </ul>
        </nav>
      </div>
      <div class="col-lg-3 col-md-3">
        <div class="header__nav__option">
          <a href="#" class="search-switch">
            <img src="{{ 'img/icon/search.png' | asset_url }}" alt="">
          </a>
          <a href="/account/login">
            <img src="{{ 'img/icon/heart.png' | asset_url }}" alt="">
          </a>
          <a href="/cart">
            <img src="{{ 'img/icon/cart.png' | asset_url }}" alt="">
            <span id="cart-count">{{ cart.item_count }}</span>
          </a>
          <div class="price">{{ cart.total_price | money }}</div>
        </div>
      </div>
    </div>
    <div class="canvas__open"><i class="fa fa-bars"></i></div>
  </div>
</header>

{% schema %}
{
  "name": "Malefashion Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo Image"
    },
    {
      "type": "text",
      "id": "announcement_text",
      "label": "Announcement Text",
      "default": "Free shipping, 30-day return or refund guarantee."
    }
  ]
}
{% endschema %}
