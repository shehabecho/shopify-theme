<header class="header">
  <div class="header__top">
    <div class="container">
      <div class="row">
        <div class="col-lg-6 col-md-7">
          <div class="header__top__left">
            <p>{{ section.settings.announcement_text }}</p>
          </div>
        </div>
        <div class="col-lg-6 col-md-5">
          <div class="header__top__right">
            <div class="header__top__links">
              {% if customer %}
                <a href="/account">My Account</a>
                <a href="/account/logout">Logout</a>
              {% else %}
                <a href="/account/login">Sign in</a>
                <a href="/account/register">Register</a>
              {% endif %}
            </div>
            <div class="header__top__hover">
              <span>
                {{- cart.currency.iso_code }}
                <i class="arrow_carrot-down"></i
              ></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-lg-3 col-md-3">
        <div class="header__logo">
          {% if section.settings.logo %}
            <a href="/">
              <img src="{{ section.settings.logo | img_url: '200x' }}" alt="{{ shop.name }}">
            </a>
          {% else %}
            <a href="/">
              <h2>{{ shop.name }}</h2>
            </a>
          {% endif %}
        </div>
      </div>
      <div class="col-lg-6 col-md-6">
        <nav class="header__menu mobile-menu">
          <ul>
            {% for link in linklists[section.settings.main_menu].links %}
              <li class="{% if link.active %}active{% endif %}">
                <a href="{{ link.url }}">{{ link.title }}</a>
                {% if link.links.size > 0 %}
                  <ul class="dropdown">
                    {% for child_link in link.links %}
                      <li>
                        <a href="{{ child_link.url }}">{{ child_link.title }}</a>
                      </li>
                    {% endfor %}
                  </ul>
                {% endif %}
              </li>
            {% endfor %}
          </ul>
        </nav>
      </div>
      <div class="col-lg-3 col-md-3">
        <div class="header__nav__option">
          <a href="#" class="search-switch">
            <img src="{{ 'img/icon/search.png' | asset_url }}" alt="">
          </a>
          <a href="/account/login">
            <img src="{{ 'img/icon/heart.png' | asset_url }}" alt="">
          </a>
          <a href="/cart">
            <img src="{{ 'img/icon/cart.png' | asset_url }}" alt="">
            <span id="cart-count">{{ cart.item_count }}</span>
          </a>
          <div class="price">{{ cart.total_price | money }}</div>
        </div>
      </div>
    </div>
    <div class="canvas__open"><i class="fa fa-bars"></i></div>
  </div>
</header>

<style>
  /* Fix header display in Shopify editor */
  .shopify-section .header {
    position: relative !important;
  }

  .shopify-section .header .container {
    max-width: 100% !important;
    padding: 0 15px !important;
  }

  .shopify-section .header__top {
    background: #f5f5f5;
    padding: 10px 0;
  }

  .shopify-section .header__top__left p {
    margin: 0;
    font-size: 14px;
  }

  .shopify-section .header__logo h2 {
    margin: 0;
    font-size: 24px;
  }

  /* Ensure menu displays properly in editor */
  .shopify-section .header__menu ul {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .shopify-section .header__menu ul li {
    position: relative;
  }

  .shopify-section .header__menu ul li a {
    padding: 5px 10px;
    display: block;
  }
</style>

{% schema %}
{
  "name": "Malefashion Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo Image"
    },
    {
      "type": "text",
      "id": "announcement_text",
      "label": "Announcement Text",
      "default": "Free shipping, 30-day return or refund guarantee."
    },
    {
      "type": "link_list",
      "id": "main_menu",
      "label": "Main Menu",
      "default": "main-menu"
    }
  ]
}
{% endschema %}
