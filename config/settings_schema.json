[
  {
    "name": "theme_info",
    "theme_name": "Malefashion Theme",
    "theme_version": "1.0.0",
    "theme_author": "Shehab Mahamud",
    "theme_documentation_url": "https://help.shopify.com/manual/online-store/themes",
    "theme_support_url": "https://support.shopify.com/"
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "Theme Colors"
      },
      {
        "type": "color",
        "id": "primary_color",
        "label": "Primary Color",
        "default": "#e53637"
      },
      {
        "type": "color",
        "id": "secondary_color",
        "label": "Secondary Color",
        "default": "#111111"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text Color",
        "default": "#6f6f6f"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Font Settings"
      },
      {
        "type": "font_picker",
        "id": "heading_font",
        "label": "Heading Font",
        "default": "nunito_sans_n4"
      },
      {
        "type": "font_picker",
        "id": "body_font",
        "label": "Body Font",
        "default": "nunito_sans_n4"
      }
    ]
  },
  {
    "name": "Logo & Branding",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Header Logo"
      },
      {
        "type": "image_picker",
        "id": "footer_logo",
        "label": "Footer Logo"
      },
      {
        "type": "range",
        "id": "logo_width",
        "min": 50,
        "max": 300,
        "step": 10,
        "unit": "px",
        "label": "Logo Width",
        "default": 150
      }
    ]
  },
  {
    "name": "Header",
    "settings": [
      {
        "type": "text",
        "id": "announcement_text",
        "label": "Announcement Text",
        "default": "Free shipping, 30-day return or refund guarantee."
      },
      {
        "type": "link_list",
        "id": "main_menu",
        "label": "Main Menu",
        "default": "main-menu"
      }
    ]
  },
  {
    "name": "Footer",
    "settings": [
      {
        "type": "textarea",
        "id": "footer_description",
        "label": "Footer Description",
        "default": "The customer is at the heart of our unique business model, which includes design."
      },
      {
        "type": "link_list",
        "id": "footer_menu_1",
        "label": "Footer Menu 1",
        "default": "footer"
      },
      {
        "type": "link_list",
        "id": "footer_menu_2",
        "label": "Footer Menu 2",
        "default": "footer"
      },
      {
        "type": "text",
        "id": "copyright_text",
        "label": "Copyright Text",
        "default": "Copyright Â© 2024 All rights reserved"
      }
    ]
  },
  {
    "name": "Social Media",
    "settings": [
      {
        "type": "header",
        "content": "Social Media Links"
      },
      {
        "type": "url",
        "id": "facebook_url",
        "label": "Facebook URL"
      },
      {
        "type": "url",
        "id": "twitter_url",
        "label": "Twitter URL"
      },
      {
        "type": "url",
        "id": "instagram_url",
        "label": "Instagram URL"
      },
      {
        "type": "url",
        "id": "pinterest_url",
        "label": "Pinterest URL"
      }
    ]
  },
  {
    "name": "Product Settings",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_vendor",
        "label": "Show Product Vendor",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "show_product_rating",
        "label": "Show Product Rating",
        "default": true
      },
      {
        "type": "range",
        "id": "products_per_page",
        "min": 12,
        "max": 48,
        "step": 4,
        "label": "Products per page",
        "default": 16
      }
    ]
  },
  {
    "name": "Cart Settings",
    "settings": [
      {
        "type": "select",
        "id": "cart_type",
        "label": "Cart Type",
        "options": [
          {
            "value": "page",
            "label": "Page"
          },
          {
            "value": "drawer",
            "label": "Drawer"
          }
        ],
        "default": "page"
      },
      {
        "type": "checkbox",
        "id": "enable_cart_notes",
        "label": "Enable Cart Notes",
        "default": true
      }
    ]
  }
]