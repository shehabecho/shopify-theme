<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="">
    <link rel="canonical" href="{{ canonical_url }}">
    <link rel="preconnect" href="https://cdn.shopify.com/" crossorigin>

    {{ content_for_header }}
    <!-- {% render 'critical' %} -->
    <!-- Commented out to avoid error; add snippet below if needed -->

    <title>
      {{ page_title }}
      {%- if current_tags -%}
        – {{ current_tags | join: ', ' }} – {{ 'general.tags.general_title' | t }}
      {%- endif -%}
      {%- if current_page != 1 -%}– {{ 'general.search.page' | t: page_number: current_page }}{%- endif -%}
      {%- unless page_title contains shop.name -%}– {{ shop.name }}{% endunless -%}
    </title>

    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}
  </head>

  <body class="gradient">
    <main role="main" id="MainContent">
      {{ content_for_layout }}
    </main>

    {% section 'cart-drawer' %}

    <ul hidden>
      <li id="a11y-refresh-page-message">{{ 'accessibility.refresh_page' | t }}</li>
      <li id="a11y-selection-message">{{ 'accessibility.selection_help' | t }}</li>
    </ul>

    {{ 'theme.js' | asset_url | script_tag }}
    {{ 'global.js' | asset_url | script_tag }}
    <!-- Add your global JS here if needed -->
  </body>
</html>
